<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/tableTitle"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="Table #"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tableIdentifierTxt"
        android:layout_width="64dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:fontFamily="serif"
        android:text="14"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4E06CF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tableTitle"
        app:layout_constraintTop_toBottomOf="@+id/tableTitle" />

    <TextView
        android:id="@+id/clientNameTxt"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="Oscar Perez"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tableTitle"
        app:layout_constraintTop_toTopOf="@+id/tableTitle" />

    <TextView
        android:id="@+id/timestampTxt"
        android:layout_width="161dp"
        android:layout_height="48dp"
        android:text="TimeStamp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/clientNameTxt"
        app:layout_constraintTop_toTopOf="@+id/tableIdentifierTxt" />

    <TextView
        android:id="@+id/priceTxt"
        android:layout_width="91dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="$ 100.0"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clientNameTxt" />

    <Button
        android:id="@+id/statusBTN"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:text="received"
        app:layout_constraintEnd_toEndOf="@+id/priceTxt"
        app:layout_constraintTop_toBottomOf="@+id/priceTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>